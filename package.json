{
  "name": "@cybozu/stylelint-config",
  "version": "0.3.2",
  "description": "A shareable stylelint config for Cybozu",
  "main": "index.js",
  "files": [
    "index.js",
    "styled-components.js"
  ],
  "scripts": {
    "lint": "eslint '**/*.js'",
    "prerelease": "run-p lint test",
    "release": "standard-version",
    "release:dryrun": "standard-version --dry-run",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "stylelint"
  ],
  "repository": "cybozu/stylelint-config",
  "homepage": "https://github.com/cybozu/stylelint-config",
  "bugs": "https://github.com/cybozu/stylelint-config/issues",
  "author": "cybozu",
  "license": "MIT",
  "dependencies": {
    "postcss-styled-syntax": "0.7.1",
    "stylelint-config-standard": "39.0.0"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "24.3.0",
    "@jest/globals": "30.1.2",
    "eslint": "9.36.0",
    "jest": "30.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "3.6.2",
    "standard-version": "9.5.0",
    "stylelint": "16.24.0",
    "typescript": "5.9.2"
  },
  "peerDependencies": {
    "stylelint": "^16.0.0"
  }
}
